generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ClaimStatus {
  ISSUED
  USED
  EXPIRED
}

model User {
    id                  String      @id @default(uuid())
    email               String      @unique
    passwordHash        String
    role                Role        @default(USER)
    createdAt           DateTime    @default(now()) @db.Timestamptz
    updatedAt           DateTime    @updatedAt @db.Timestamptz

    waitlists           Waitlist[]
    claims              Claim[]
    sessions            Session[]
}

model Drop {
    id                          String      @id @default(uuid())
    title                       String      @db.VarChar(255)
    description                 String?     @db.Text
    claimWindowStart            DateTime    @db.Timestamptz
    claimWindowEnd              DateTime    @db.Timestamptz
    totalSlots                  Int         @default(0)
    isActive                    Boolean     @default(true)
    createdAt                   DateTime    @default(now()) @db.Timestamptz
    updatedAt                   DateTime    @updatedAt @db.Timestamptz

    // Indexes
    @@index([isActive])
    @@index([claimWindowStart, claimWindowEnd])
    @@index([createdAt])

    waitlists Waitlist[]
    claims    Claim[]
}

model Waitlist {
    id                          String      @id @default(uuid())
    userId                      String
    dropId                      String
    priorityScore               Int
    joinedAt                    DateTime    @default(now()) @db.Timestamptz

    // Relations
    user                        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
    drop                        Drop        @relation(fields: [dropId], references: [id], onDelete: Cascade)

    // Constraints & Indexes
    @@unique([userId, dropId]) // A user can only be on the waitlist once for a given drop
    @@index([userId])
    @@index([joinedAt])
    @@index([dropId, priorityScore(sort: Desc), joinedAt(sort: Asc)])
}

model Claim {
    id                          String      @id @default(uuid())
    userId                      String
    dropId                      String
    code                        String      @unique @db.VarChar(100)
    status                      ClaimStatus @default(ISSUED)
    issuedAt                    DateTime    @db.Timestamptz
    usedAt                      DateTime?   @db.Timestamptz

    // Relations
    user                        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
    drop                        Drop        @relation(fields: [dropId], references: [id], onDelete: Cascade)

    // Indexes
    @@unique([userId, dropId]) // A user can only have one claim per drop
    @@index([userId])
    @@index([dropId])
    @@index([status])
    @@index([issuedAt])
}

model Session {
    id                          String      @id @default(uuid())
    userId                      String
    refreshTokenHash            String      @unique
    userAgent                   String?     @db.VarChar(512)
    ipAddress                   String?     @db.VarChar(45)
    expiresAt                   DateTime    @db.Timestamptz
    revokedAt                   DateTime?   @db.Timestamptz
    createdAt                   DateTime    @default(now()) @db.Timestamptz
    updatedAt                   DateTime    @updatedAt @db.Timestamptz

    // Relations
    user                        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@index([userId])
    @@index([expiresAt])
    @@index([userId, revokedAt]) // To find active sessions faster for a user
}